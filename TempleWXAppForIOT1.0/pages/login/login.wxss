/* pages/login/login.wxss */
.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.login-box {
  width: 90%;
  max-width: 500rpx;
  padding: 180rpx 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

/* Logo样式 */
.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.logo-icon {
  font-size: 80rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.logo-text {
  font-size: 32rpx;
  color: #666;
  font-weight: 300;
}

/* 标题样式 */
.login-header {
  text-align: center;
  margin-bottom: 50rpx;
}

.login-title {
  font-size: 48rpx;
  color: #000;
  font-weight: 500;
  letter-spacing: 4rpx;
}

/* 输入框样式 */
.input-container {
  margin-bottom: 50rpx;
}

.input-wrapper {
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #e0e0e0;
  padding-bottom: 10rpx;
}

.login-input {
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
  padding: 0 20rpx;
}

/* 按钮样式 */
.button-container {
  display: flex;
  flex-direction: row; /* 横向排列 */
  gap: 5rpx;
  margin-bottom: 30rpx;
}

.login-btn {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.login-btn.primary {
  background-color: #000;
  color: #fff;
}

.login-btn.secondary {
  background-color: #fff;
  color: #000;
  border: 2rpx solid #000;
}

/* 底部链接 */
.footer-links {
  text-align: center;
}

.link-text {
  font-size: 28rpx;
  color: #666;
  text-decoration: underline;
}