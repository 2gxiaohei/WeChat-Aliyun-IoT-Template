<!--pages/message/message.wxml-->
<view class="page">
 <!-- 清除按钮 -->
 <view class="header">
    <button class="clear-btn" bindtap="confirmClearAll">清除全部消息</button>
  </view>
  <view class="msg-box">
    <block wx:for="{{msgList}}" wx:key="id">
      <view class="item">
        <text class="time">{{item.time}}</text>
        <text class="cnt">{{item.content}}</text>
      </view>
    </block>
  </view>
</view>